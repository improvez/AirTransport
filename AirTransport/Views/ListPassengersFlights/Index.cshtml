@model IEnumerable<AirTransport.Models.ListPassengersFlight>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IsWindowSeat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdFlightNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPassengerNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IsWindowSeat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsRight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdFlightNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPassengerNavigation.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdFlight">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdFlight">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdFlight">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
