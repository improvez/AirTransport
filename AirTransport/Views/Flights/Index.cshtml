@model IEnumerable<AirTransport.Models.Flight>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExitTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstimatedArrivalTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdAircraftNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdDestinationAirportNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdOriginAirportNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ExitTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstimatedArrivalTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdAircraftNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDestinationAirportNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdOriginAirportNavigation.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
